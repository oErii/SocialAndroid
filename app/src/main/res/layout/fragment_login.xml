<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- Logo -->

    <ImageView
        android:id="@+id/LogoSocial"
        android:layout_width="0.0dp"
        android:layout_height="0.0dp"
        android:contentDescription="@string/LogoSocial"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.2"
        android:src="@drawable/social_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Titolo -->

    <TextView
        android:id="@+id/Titolo"
        android:text="@string/Entra"
        app:layout_constraintTop_toBottomOf="@id/LogoSocial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="40dp"
        />

    <!-- Campo Username -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/UsernameBox"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titolo"
        android:hint="@string/Username"
        android:layout_marginTop="15dp"
        app:boxStrokeColor="@color/verde"
        >


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PswBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UsernameBox"
        android:hint="@string/password"
        android:layout_marginTop="5dp"
        app:boxStrokeColor="@color/verde"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/Accedi"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:text="@string/Accedi"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PswBox"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/verde"
        />

    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/Registrati"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:text="@string/Registrati"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Accedi"
        android:layout_marginTop="5dp"
        android:textColor="@color/material_dynamic_neutral30"
        app:strokeColor="@color/verde"
        />


</androidx.constraintlayout.widget.ConstraintLayout>